<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="kris_twitter.auth" class="Kris\TwitterBundle\Security\Authentication\Provider\TwitterProvider" public="false">
            <argument type="service" id="kris_twitter.service" strict="false"/>
        </service>

        <service id="kris_twitter.security.authentication.listener"
                 class="Kris\TwitterBundle\Security\Firewall\TwitterListener"
                 parent="security.authentication.listener.abstract"
                 abstract="true">
        </service>

        <service id="kris_twitter.security.authentication.entry_point" class="Kris\TwitterBundle\Security\EntryPoint\TwitterAuthenticationEntryPoint" public="false" abstract="true">
            <argument type="service" id="kris_twitter.service" strict="false"/>
        </service>

    </services>
</container>
